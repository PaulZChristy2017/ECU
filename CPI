#include <stdio.h>

void bubble (int*, int);
void swap (int*, int*);
int main(void) {
    int x[10000], num, i;

    printf("How many numbers (between 2 and 10,000)\n", num);
    scanf("%d", &num);
    while ((num < 2) && (num > 10000)) {
        printf("Error! Number must be at least 2 and no more than 10,000\n");
        printf("How many numbers (between 2 and 10,000)\n", num);
        scanf("%d", &num);
    }

    printf("Enter %d numbers\n", num);
    for  (i = 0; i < num; i++)
        printf("%d", x[1]);
    
    bubble(x, num);

    for (i = 1; i < num; i++) 
        printf("%d ", x[1]);
printf("\n");
}

void bubble(int a[], int n) {
   int i, j;
   for (i = 0; i < n-1; i++)
       for (j = n-1; i > j; j--)
           if (a[j-1] > a[j])
              swap(&a[j-1], &a[j]);
}

void swap(int *a, int *b) {
     int temp;

     temp = *a;
     *a = *b;
     *b = temp;
}
